{block content}
<div id="text-view">
    <h2>{$filename}</h2>
    <div class="content">
	{var $content = $file->getContent()}
	{foreach $content as $line=>$text}
	    {$text}<br>
	{/foreach}
	
    </div>
</div>
{/block}


